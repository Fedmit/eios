<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eios.StudentsPage">
    <ContentPage.Content>
        <StackLayout Padding="20">

            <Label x:Name="timeLable"
                   Margin="10"
                   HorizontalOptions="Center"/>
            <Label x:Name="occupationLable"
                   Margin="5"
                   HorizontalOptions="Center"/>
            <StackLayout Margin="5" Orientation="Horizontal">
                <Label x:Name="defaultLable"
                       HorizontalOptions="Start"/>
                <Label x:Name="onSiteLable"
                       HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <ListView x:Name="studentListView"/>
            <Button x:Name="marked"
                    Margin="5"/>
            <Button x:Name="back"
                    Margin="5"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>