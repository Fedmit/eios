<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:eios"
             x:Class="eios.CompletedOccupationPage">
    <ContentPage.Content>
        <StackLayout Margin="10,15,10,10">
            <Label
                Text="{Binding Time}"
                Margin="15"
                HorizontalOptions="Center"
                TextColor="Black"
                FontSize="Medium" />
            <Label
                Text="{Binding NameOccupation}"
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5"
                FontSize="Medium" />
            <StackLayout Orientation="Horizontal" Margin="5">
                <StackLayout Margin="5" Orientation="Horizontal">
                    <Label
                        Text="Всего:"
                        FontSize="Medium"
                        HorizontalOptions="Start"
                        TextColor="Black" />
                    <Label
                        Text="{Binding Total}"
                        FontSize="Medium"
                        TextColor="Black" />
                </StackLayout>
                <StackLayout Margin="5" Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                    <Label
                        Text="Присутствуют:"
                        FontSize="Medium"
                         HorizontalOptions="EndAndExpand"
                        TextColor="Black" />
                    <Label
                        Text="{Binding PresentTotal}"
                        FontSize="Medium"
                        TextColor="Black" />
                </StackLayout>
            </StackLayout>
            <ActivityIndicator
                Margin="20"
                WidthRequest="35"
                HeightRequest="35"
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}" />
            <ListView
                x:Name="studentListView"
                SeparatorVisibility="None"
                RowHeight="50"
                ItemsSource="{Binding StudentsList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="20,0,20,0" Spacing="20">
                                <Image 
                                    Source="{Binding IconSource}"
                                    HeightRequest="20"
                                    WidthRequest="20"/>
                                <Label Text="{Binding FullName}" VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="editButton"
                        HorizontalOptions="Center"
                        BorderColor="Black"
                        Text="Изменить"
                        TextColor="Black"
                        Clicked="OnEditClicked"
                        Margin="5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>