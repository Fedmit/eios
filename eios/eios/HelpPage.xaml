<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eios.HelpPage">
    <StackLayout BackgroundColor="#f5f5f5">
        <Frame OutlineColor="#000000"  Margin="10" Padding="5">
            <StackLayout BackgroundColor="#ffffff">

                <Label Font="16" Text="Опишите вашу проблему" Margin="10,10,0,0" TextColor="#7d7f7d" />
                <Frame OutlineColor="#000000"  Margin="4,4,4,4" Padding="10" >
                    <Editor   HeightRequest="400" Margin="4,4,4,4" />
                 </Frame>
                <Button Text="Отправить" 
                        Font="14"
                    VerticalOptions="End"
                        Margin="4,0,4,4"
                     HorizontalOptions="End"
                    BackgroundColor="#1277d3" 
                    TextColor="#ffffff"/>

            </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>