<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eios.LoginPage"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms">
    <ContentPage.Content>
        <StackLayout Padding="75,75,75,20" BackgroundColor="White">
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
                <Label
                    Text="ЭИОС ПГУ &#10; Журнал посещаемости"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center"
                    FontSize="20"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Spacing="7">
                <Label
                    Text="Вход в систему"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    FontSize="20"/>
                <Entry
                    x:Name="loginEntry"
                    Placeholder="Логин"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    VerticalOptions="Center"/>
                <Entry
                    x:Name="passwordEntry"
                    Placeholder="Пароль"
                    PlaceholderColor="Gray"
                    IsPassword="true"
                    TextColor="Black"
                    WidthRequest="200"
                    VerticalOptions="Center"/>
                <StackLayout Orientation="Horizontal">
                    <controls:CheckBox
                        HorizontalOptions="Center"/>
                    <Label
                        Text="Запомнить меня"
                        FontSize="20"
                        HorizontalOptions="Center"/>
                </StackLayout>
                <Button 
                    x:Name="loginButton"
                    Text="Войти"
                    FontSize="20"
                    BackgroundColor="#1E90FF"
                    TextColor="White"
                    HeightRequest="40"
                    WidthRequest="150"
                    Clicked="OnLoginButtonClicked"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button
                    x:Name="forgotPassword"
                    Text="Я забыл свой пароль"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    FontSize="16"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>