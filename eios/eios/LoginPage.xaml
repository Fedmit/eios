<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eios.LoginPage"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms">
    <ContentPage.Content>
        <StackLayout Spacing="110" Padding="75" BackgroundColor="White">
            <StackLayout Orientation="Vertical">
                <Label
                    Text="ЭИОС ПГУ &#10; Журнал посещаемости"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center"
                    FontSize="20"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" Spacing="15">
                <Label
                    Text="Вход в систему"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    FontSize="20"/>
                <Entry
                    x:Name="loginEntry"
                    Placeholder="Логин"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    VerticalOptions="Center"/>
                <Entry
                    x:Name="passwordEntry"
                    Placeholder="Пароль"
                    PlaceholderColor="Gray"
                    IsPassword="true"
                    TextColor="Black"
                    WidthRequest="200"
                    VerticalOptions="Center"/>
                <controls:CheckBox
                    DefaultText="   Запомнить меня"
                    TextColor="Black"
                    FontSize="20"/>
                <Button 
                    x:Name="loginButton"
                    Text="Войти"
                    VerticalOptions="Center"
                    FontSize="20"
                    BackgroundColor="#1E90FF"
                    TextColor="White"
                    HeightRequest="40"
                    WidthRequest="150"/>
            </StackLayout>
            <StackLayout>
                <Button
                    x:Name="forgotPassword"
                    Text="Я забыл свой пароль"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    FontSize="16"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>