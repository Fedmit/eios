<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eios"
    x:Class="eios.OccupationsPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InverseBoolConverter
                x:Key="inverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Name="groupButton"
            Order="Primary"
            Text="{Binding Group}"
            Priority="0"
            Activated="OnGroupClicked" />
        <ToolbarItem
            Name="calendarButton"
            Order="Primary"
            Text="{Binding DateStr}"
            Priority="0"
            Activated="OnDateClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <StackLayout>
                <ActivityIndicator
                    Margin="20"
                    WidthRequest="35"
                    HeightRequest="35"
                    IsVisible="{Binding IsBusy}"
                    IsRunning="{Binding IsBusy}" />
                <ListView
                    x:Name="listView"
                    IsVisible="{Binding IsBusy, Converter={StaticResource inverter}}"
                    RowHeight="65"
                    SeparatorVisibility="None"
                    ItemsSource="{Binding OccupationsList}"
                    IsPullToRefreshEnabled="true"
                    RefreshCommand="{Binding RefreshCommand}"
                    IsRefreshing="{Binding IsRefreshing}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Orientation="Horizontal"
                                    Spacing="10">
                                    <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="StartAndExpand"
                                    Margin="20,0"
                                    Spacing="20">
                                        <local:BedgeView
                                        Size="50" />
                                        <Label
                                        Text="{Binding Name}"
                                        VerticalOptions="Center"
                                        FontSize="16" />
                                    </StackLayout>
                                    <StackLayout HorizontalOptions="EndAndExpand">
                                        <Label
                                        Text="{Binding Aud}"
                                            HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="CenterAndExpand"
                                        WidthRequest="60" />
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <DatePicker
                x:Name="datePicker"
                Date="{Binding Date, Mode=TwoWay}"
                DateSelected="OnDateSelected"
                IsVisible="False">
                <DatePicker.MinimumDate>6/01/2016</DatePicker.MinimumDate>
                <DatePicker.MaximumDate>6/30/2020</DatePicker.MaximumDate>
            </DatePicker>
            <Picker
                x:Name="groupPicker"
                IsVisible="False"
                SelectedIndexChanged="OnSelectedIndexChanged"
                ItemsSource="{x:Static local:App.Groups}"
                ItemDisplayBinding="{Binding Name}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>