<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eios.AboutPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#ffffff">
             <StackLayout BackgroundColor="#ffffff">
                <Image Source="PSU.jpg"
                       HorizontalOptions="Center"
                       Margin="0,30,0,10"
                        WidthRequest="100" 
                       HeightRequest="100"
                       Aspect="AspectFit"/>
                <Label Text="ЭИОС ПГУ"
                       HorizontalOptions="Center"
                       Font="18"
                       TextColor="#000000"/>
                <Label Text="Журнал посещаемости"
                       HorizontalOptions="Center"
                       Font="18"
                       TextColor="#000000"/>
                <Label Text="Версия 1.0.0"
                       HorizontalOptions="Center"
                       Font="18"
                       TextColor="#000000"/>
            </StackLayout>
            <StackLayout BackgroundColor="#ffffff" 
                             VerticalOptions="EndAndExpand"
                         HorizontalOptions="Center"
                         >
                    <Image Source="Fot.jpg"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           WidthRequest="100" 
                           HeightRequest="100"
                           Aspect="AspectFit"/>
                    <Label Text="Центр проектного творчества"
                           Margin="0,-17,0,0"
                           HorizontalOptions="Center"
                           Font="18"
                           TextColor="#000000"/>
                    <Label Text="2018"
                           Margin="0,-7,0,0"
                       HorizontalOptions="Center"
                       Font="18"
                       TextColor="#000000"/>
                </StackLayout>
        </StackLayout>
        

    </ContentPage.Content>
</ContentPage>