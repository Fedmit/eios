<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="eios.AboutPage">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="#ffffff"
            Padding="0,10,0,15">
                <Image
                    Source="PSU.jpg"
                    HorizontalOptions="Center"
                    Margin="0,25"
                    WidthRequest="100"
                    HeightRequest="100"
                    Aspect="AspectFit" />
                <Label
                    Text="ЭИОС ПГУ"
                    HorizontalOptions="Center"
                    Font="18"
                    TextColor="#000000" />
                <Label
                    Text="Журнал посещаемости"
                    HorizontalOptions="Center"
                    Font="18"
                    TextColor="#000000" />
                <Label
                    Text="Версия 1.0.0"
                    HorizontalOptions="Center"
                    Font="18"
                    TextColor="#000000" />
                <Image
                    Source="Fot.jpg"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    WidthRequest="100"
                    HeightRequest="100"
                    Margin="0,65,0,25"
                    Aspect="AspectFit" />
                <Label
                    Text="Центр проектного творчества"
                    HorizontalOptions="Center"
                    Font="18"
                    Margin="0,15"
                    TextColor="#000000" />
                <Label
                    Text="2018"
                    HorizontalOptions="Center"
                    Font="18"
                    Margin="0,35,0,0"
                    TextColor="#000000" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>