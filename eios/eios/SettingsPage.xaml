<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:eios"
             x:Class="eios.SettingsPage">
    <ContentPage.Content>
        <TableView Intent="Settings" HeightRequest="100">
            <TableRoot>
                <TableSection Title="Уведомления">
                    <SwitchCell Text="Поулучать уведомления о начале пары" On="True" />
                    <SwitchCell Text="Напомнить отметить" On="true" />
                </TableSection>
                <TableSection Title="Группа">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="20,0">
                            <Label
                                Text="Выбрать группу"
                                VerticalOptions="Center" />
                            <Picker
                                x:Name="pickerGroup"
                                Title="Группа"
                                HorizontalOptions="EndAndExpand"
                                ItemsSource="{x:Static local:App.Groups}"
                                ItemDisplayBinding="{Binding Name}" />
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>